import uvloop
from contextlib import asynccontextmanager

from fastapi import FastAPI
from fastapi.middleware.cors import CORSMiddleware
{%- if use_rate_limiting %}
from slowapi import _rate_limit_exceeded_handler
from slowapi.errors import RateLimitExceeded
{%- endif %}

from src.core.config import settings
from src.core.logging import setup_logging, get_logger
from src.core.middleware import RequestContextMiddleware
{%- if use_rate_limiting %}
from src.core.limiter import limiter, rate_limit_exceeded_handler
{%- endif %}
from src.api.router import api_router, root_router
from src.services.database import init_db, close_db

# Setup logging first
setup_logging()
logger = get_logger("main")


@asynccontextmanager
async def lifespan(app: FastAPI):
    """
    Application lifespan manager.
    Handles startup and shutdown events.
    """
    # Startup
    logger.info(
        "application_starting",
        environment=settings.app_env,
        debug=settings.debug,
    )

    # Initialize database
    await init_db()

    logger.info("application_started")

    yield

    # Shutdown
    logger.info("application_stopping")

    # Close database connections
    await close_db()

    logger.info("application_stopped")


def create_app() -> FastAPI:
    """Create and configure the FastAPI application."""

    app = FastAPI(
        title=settings.project_name,
        description="{{ project_description }}",
        version="0.1.0",
        docs_url="/docs" if settings.is_development else None,
        redoc_url="/redoc" if settings.is_development else None,
        openapi_url="/openapi.json" if settings.is_development else None,
        lifespan=lifespan,
    )

{%- if use_rate_limiting %}
    # Add rate limiter to app state
    app.state.limiter = limiter

    # Add rate limit error handler
    app.add_exception_handler(RateLimitExceeded, rate_limit_exceeded_handler)
{%- endif %}

    # Add CORS middleware
    app.add_middleware(
        CORSMiddleware,
        allow_origins=["*"] if settings.is_development else [],
        allow_credentials=True,
        allow_methods=["*"],
        allow_headers=["*"],
    )

    # Add request context middleware
    app.add_middleware(RequestContextMiddleware)

    # Include routers
    app.include_router(root_router)  # Health checks at root
    app.include_router(api_router)   # API routes under /api/v1

    return app


# Create application instance
app = create_app()


# Root endpoint
@app.get("/")
async def root():
    """Root endpoint with service information."""
    return {
        "service": settings.project_name,
        "version": "0.1.0",
        "environment": settings.app_env,
        "docs": "/docs" if settings.is_development else None,
        "health": "/health",
        "agents": "/api/v1/agents/info",
    }


def run():
    """Run the application with uvicorn."""
    import uvicorn

    uvicorn.run(
        "src.main:app",
        host=settings.host,
        port=settings.port,
        reload=settings.is_development,
        workers=settings.workers if not settings.is_development else 1,
        loop="uvloop",
        log_level="debug" if settings.debug else "info",
    )


if __name__ == "__main__":
    run()
