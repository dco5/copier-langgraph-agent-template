[project]
name = "{{ project_slug }}"
version = "0.1.0"
description = "{{ project_description }}"
readme = "README.md"
license = { text = "{{ license }}" }
requires-python = ">={{ python_version }}"
authors = [
    { name = "{{ author_name }}", email = "{{ author_email }}" }
]

dependencies = [
    # LangChain ecosystem
    "langchain>=1.2.0",
    "langchain-core>=1.2.0",
{%- if llm_provider == 'openai' %}
    "langchain-openai>=1.1.0",
{%- elif llm_provider == 'anthropic' %}
    "langchain-anthropic>=1.3.0",
{%- elif llm_provider == 'azure' %}
    "langchain-openai>=1.1.0",
{%- elif llm_provider == 'ollama' %}
    "langchain-ollama>=0.3.0",
{%- endif %}
    "langgraph>=1.0.5",
{%- if database == 'postgresql' %}
    "langgraph-checkpoint-postgres>=3.0.0",
{%- elif database == 'sqlite' %}
    "langgraph-checkpoint-sqlite>=3.0.0",
{%- endif %}

    # FastAPI & Web
    "fastapi>=0.115.0",
    "uvicorn[standard]>=0.32.0",
    "uvloop>=0.21.0",
    "httpx>=0.27.0",
    "sse-starlette>=2.1.0",
    "python-multipart>=0.0.12",

{%- if database == 'postgresql' %}
    # Database
    "sqlalchemy[asyncio]>=2.0.0",
    "asyncpg>=0.30.0",
    "psycopg[binary,pool]>=3.2.0",
    "pgvector>=0.3.0",
    "alembic>=1.14.0",
{%- elif database == 'sqlite' %}
    # Database
    "sqlalchemy[asyncio]>=2.0.0",
    "aiosqlite>=0.20.0",
    "alembic>=1.14.0",
{%- endif %}

{%- if use_semantic_memory and database == 'postgresql' %}
    # Memory & Embeddings
    "mem0ai>=0.1.0",
{%- endif %}

{%- if use_auth %}
    # Authentication & Security
    "python-jose[cryptography]>=3.3.0",
    "passlib[bcrypt]>=1.7.4",
{%- endif %}
    "pydantic[email]>=2.9.0",
    "pydantic-settings>=2.6.0",

{%- if observability == 'langfuse' %}
    # Observability - Langfuse
    "langfuse>=3.0.0",
{%- elif observability == 'langsmith' %}
    # Observability - LangSmith
    "langsmith>=0.4.0",
{%- endif %}
{%- if use_prometheus %}
    "prometheus-client>=0.21.0",
{%- endif %}
    "structlog>=24.4.0",

{%- if use_rate_limiting %}
    # Rate Limiting
    "slowapi>=0.1.9",
{%- endif %}

    # Utilities
    "tenacity>=9.0.0",
    "python-dotenv>=1.0.0",
    "orjson>=3.10.0",
    "aiofiles>=24.1.0",
]

[project.optional-dependencies]
dev = [
    "pytest>=8.3.0",
    "pytest-asyncio>=0.24.0",
    "pytest-cov>=6.0.0",
    "httpx>=0.27.0",
    "ruff>=0.7.0",
    "mypy>=1.13.0",
    "pre-commit>=4.0.0",
{%- if database == 'sqlite' %}
    "aiosqlite>=0.20.0",
{%- endif %}
]

{%- if observability != 'none' %}
eval = [
{%- if observability == 'langfuse' %}
    "langfuse>=3.0.0",
{%- elif observability == 'langsmith' %}
    "langsmith>=0.4.0",
{%- endif %}
]
{%- endif %}

{%- if use_streamlit %}
streamlit = [
    "streamlit>=1.40.0",
]
{%- endif %}

all = [
    "{{ project_slug }}[dev{% if observability != 'none' %},eval{% endif %}{% if use_streamlit %},streamlit{% endif %}]",
]

[project.scripts]
{{ project_slug | replace('-', '_') }} = "src.main:run"

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.hatch.build.targets.wheel]
packages = ["src"]

[tool.pytest.ini_options]
asyncio_mode = "auto"
testpaths = ["tests"]
addopts = "-v --tb=short"
filterwarnings = [
    "ignore::DeprecationWarning",
]

[tool.ruff]
target-version = "py{{ python_version | replace('.', '') }}"
line-length = 100

[tool.ruff.lint]
select = ["E", "F", "I", "N", "W", "UP"]
ignore = ["E501"]

[tool.mypy]
python_version = "{{ python_version }}"
warn_return_any = true
warn_unused_ignores = true
disallow_untyped_defs = true
plugins = ["pydantic.mypy"]

[tool.coverage.run]
source = ["src"]
omit = ["tests/*", "*/__pycache__/*"]

[tool.coverage.report]
exclude_lines = [
    "pragma: no cover",
    "if TYPE_CHECKING:",
    "raise NotImplementedError",
]
