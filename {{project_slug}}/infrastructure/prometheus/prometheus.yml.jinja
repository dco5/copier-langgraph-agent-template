global:
  scrape_interval: 15s
  evaluation_interval: 15s

alerting:
  alertmanagers:
    - static_configs:
        - targets: []

rule_files: []

scrape_configs:
  # Prometheus self-monitoring
  - job_name: "prometheus"
    static_configs:
      - targets: ["localhost:9090"]

  # {{ project_name }} Agent Service metrics
  - job_name: "{{ project_slug }}-service"
    static_configs:
      - targets: ["agent-service:8000"]
    metrics_path: "/metrics"
    scrape_interval: 10s
