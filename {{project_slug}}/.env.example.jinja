# {{ project_name }} - Environment Configuration
# Copy this file to .env.development, .env.staging, or .env.production

# ============================================
# Application
# ============================================
APP_ENV=development
PROJECT_NAME="{{ project_name }}"
DEBUG=true
HOST=0.0.0.0
PORT=8000
WORKERS=1

{%- if database == 'postgresql' %}
# ============================================
# Database (PostgreSQL with pgvector)
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB={{ _db_name }}
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
{%- elif database == 'sqlite' %}
# ============================================
# Database (SQLite)
# ============================================
SQLITE_PATH=./data/{{ _db_name }}.db
{%- else %}
# ============================================
# Database (In-Memory)
# ============================================
# No persistence - state is lost on restart
{%- endif %}

# ============================================
# LLM Provider
# ============================================
{%- if llm_provider == 'openai' %}
OPENAI_API_KEY=sk-your-openai-key
{%- elif llm_provider == 'anthropic' %}
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
{%- elif llm_provider == 'azure' %}
AZURE_OPENAI_API_KEY=your-azure-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_VERSION=2024-02-01
{%- elif llm_provider == 'ollama' %}
OLLAMA_BASE_URL=http://localhost:11434
{%- endif %}

# ============================================
# LLM Configuration
# ============================================
DEFAULT_LLM_MODEL={{ default_model }}
DEFAULT_LLM_TEMPERATURE=0.7
MAX_TOKENS=4096
LLM_REQUEST_TIMEOUT=60
LLM_MAX_RETRIES=3

{%- if use_semantic_memory and database == 'postgresql' %}
# ============================================
# Memory System
# ============================================
LONG_TERM_MEMORY_ENABLED=true
MEMORY_COLLECTION_NAME={{ _memory_collection }}
{%- if llm_provider == 'openai' %}
MEMORY_MODEL=gpt-4.1-mini
MEMORY_EMBEDDER_MODEL=text-embedding-3-small
{%- elif llm_provider == 'anthropic' %}
MEMORY_MODEL=claude-haiku-4-5-20251001
{%- endif %}
{%- endif %}

{%- if observability == 'langfuse' %}
# ============================================
# Observability - Langfuse
# ============================================
LANGFUSE_ENABLED=true
LANGFUSE_PUBLIC_KEY=pk-lf-your-key
LANGFUSE_SECRET_KEY=sk-lf-your-key
LANGFUSE_HOST=https://cloud.langfuse.com
{%- elif observability == 'langsmith' %}
# ============================================
# Observability - LangSmith
# ============================================
LANGSMITH_ENABLED=true
LANGSMITH_API_KEY=your-langsmith-key
LANGSMITH_PROJECT={{ project_slug }}
{%- endif %}

{%- if use_auth %}
# ============================================
# Security
# ============================================
# Generate with: openssl rand -hex 32
SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
{%- endif %}

{%- if use_rate_limiting %}
# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
{%- endif %}

{%- if use_prometheus %}
# ============================================
# Metrics
# ============================================
METRICS_ENABLED=true
{%- endif %}
